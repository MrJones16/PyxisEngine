{
  "version": 8,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug", "PX_DEBUG": "ON" }
    },
    {
      "name": "release",
      "displayName": "Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo", "PX_RELEASE": "ON" }
    },
    {
      "name": "dist",
      "displayName": "Distribution",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/dist",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release", "PX_DIST": "ON" }
    }
  ],
  "buildPresets": [
    { "name": "debug",    "configurePreset": "debug" },
    { "name": "release",  "configurePreset": "release" },
    { "name": "dist",     "configurePreset": "dist" }
  ]
}