    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Pyxis-Game Linux",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/Pyxis-Game/Pyxis-Game",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Pyxis-Game Windows",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug-windows-x86_64/Pyxis-Game/Pyxis-Game.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}